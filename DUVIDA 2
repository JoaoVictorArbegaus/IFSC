package lista1ex14;

import java.util.Scanner;


public class Lista1ex14 {

  
    public static void main(String[] args) {
      Scanner input = new Scanner(System.in);
        double horas, min, seg, resultado;
        
        System.out.println("Digite as horas, minutos e segundos do dia atual ");
        horas =Double.valueOf(input.nextLine());
min = Double.valueOf(input.nextLine());
seg= Double.valueOf(input.nextLine());

        resultado= ((24-horas)*3600)+ ((60-min)*60)+ (60-seg);
        
        System.out.println("");
        System.out.println("Os segundos restantes do dia s√£o "+resultado);
        
        
        
        
        
    }
    
}
