//class

public class Contato {
    private String nome, telefone;

    public Contato() {
    }

    public String getNome() {
        return nome;
    }

    public void setNome(String nome) {
        this.nome = nome;
    }

    public String getTelefone() {
        return telefone;
    }

    public void setTelefone(String telefone) {
        this.telefone = telefone;
    }

    
    @Override
    public String toString() {
        return "Contato: " + nome + ", telefone: " + telefone;
    }
    
}


-----------------------------------------------------------------------------
//main


import java.util.ArrayList;
import java.util.Scanner;
import javax.swing.JOptionPane;


public class Main {

    public static Scanner input = new Scanner(System.in);
    public static void main(String[] args) {
        
        ArrayList<Contato> listaContatos = new ArrayList();
        
        String op = JOptionPane.showInputDialog("Deseja add um contato (S ou N): ");
        
        while(op.equals("S")){
            Contato contato = new Contato();
            
            String nome = JOptionPane.showInputDialog("Escreva o nome: ");
            contato.setNome(nome);
            String numero = JOptionPane.showInputDialog("Digite o numero: ");
            contato.setTelefone(numero);
            
            op = JOptionPane.showInputDialog("Deseja add mais um contato (S ou N): ");
            
            listaContatos.add(contato);
        }
        
        JOptionPane.showMessageDialog(null,"Numero de contatos na lista: " + listaContatos.size());
        
        JOptionPane.showMessageDialog(null, listaContatos.toString());
        
        JOptionPane.showMessageDialog(null, "Dados do 2° contato: "+ listaContatos.get(1));
        
        JOptionPane.showMessageDialog(null, "A lista esta vazia: "+ listaContatos.isEmpty());
        
        listaContatos.remove(0);
        
        Contato novoContato = new Contato();
        novoContato.setNome("Coquexi");
        novoContato.setTelefone("12345643");
        listaContatos.add(0, novoContato);
        
        Contato c = listaContatos.get(3);
        c.setNome("Ana");
        c.setTelefone("12345");
        JOptionPane.showMessageDialog(null, listaContatos.toString());
        
        
        
        
        
    }
    
}
